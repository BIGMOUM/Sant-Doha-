{% for p in produits %}
<tr>
    <td>{{ p.id }}</td>
    <td>{{ p.nom }}</td>
    <td>{{  p.description}}</td>
    <td>{{ p.prix }}</td>
    <td>{{ p.categorie }}</td>
    <td>{{p.qteStock }}</td>
    <td>
        <a href="{{ path('view_produit',{'id':p.id}) }}" class="btn btn-primary btn-xs"><i
                    class="fa fa-folder"></i> View </a>
        <a href="{{ path('Update_produit', {'id':p.id}) }}"
           class="btn btn-info btn-xs"><i
                    class="fa fa-pencil"></i> Edit </a>
        <a href="{{ path('Supprimer_produit', {'id':p.id}) }}"
           class="btn btn-danger btn-xs"> <i class="fa fa-trash-o"></i> Delete </a>
    </td>
</tr>
{% endfor %}